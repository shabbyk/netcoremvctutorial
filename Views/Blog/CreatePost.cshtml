@{ 
    ViewData["Title"] = "Create Post";
}

@model BlogPosts

<form asp-controller="Blog" asp-action="CreatePost" method="POST" class="col-sm-8">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2"></label>
        <input asp-for="Title" class="col-sm-10 form-control" value="" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2"></label>
        <input asp-for="Description" class="col-sm-10 form-control" value="" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2"></label>
        <input asp-for="Email" class="col-sm-10 form-control" value="" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Age" class="col-sm-2"></label>
        <input asp-for="Age" class="col-sm-10 form-control" value="" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="CategoryId" class="col-sm-2">Category</label>
        <select asp-for="CategoryId" class="col-sm-10 form-control" asp-items="Html.GetEnumSelectList<Category>()"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="col-sm-2 form-control btn-primary">Create</button>
    </div>
</form>