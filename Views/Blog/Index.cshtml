@model IEnumerable<BlogPosts>
@{
    ViewData["Title"] = "Blogs List";
}


<h1>List of Blogs</h1>

<div class="row">
    @foreach (var x in Model)
    {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@x.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@x.Description | @x.CreatedOn</h6>
                    <p class="card-text">@x.Description</p>
                    <a href="/Blog/@x.PostId" class="btn btn-primary">Read Post</a>
                    <a href="#" class="btn btn-warning">Remove Post</a>
                </div>
            </div>
        </div>
    }
</div>